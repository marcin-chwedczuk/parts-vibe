config.stopBubbling = true

# Spring constructor injection: preserve parameter-level annotations on
# Lombok-generated constructors (e.g. @RequiredArgsConstructor).
# Without this, Spring may not see @Qualifier/@Value on generated ctor params.
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Qualifier
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Value
lombok.copyableAnnotations += org.springframework.beans.factory.annotation.Autowired
lombok.copyableAnnotations += org.springframework.context.annotation.Lazy
lombok.copyableAnnotations += jakarta.inject.Named

# Tooling support: mark Lombok-generated members so analyzers can ignore them.
lombok.addLombokGeneratedAnnotation = true

# Team guardrail: avoid @Data in places like JPA entities.
lombok.data.flagUsage = warning
